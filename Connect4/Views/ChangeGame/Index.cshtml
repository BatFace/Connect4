@model Connect4.ViewModels.ChangeGameViewModel
@{
    ViewBag.Title = "Index";
}

<h2>@Model.PlayerName</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(a => a.PlayerName)

    <div class="form-horizontal">
        <div class="form-group">
            <div class="control-label col-md-2">Play Against</div>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.OtherPlayerID, Model.AllOtherPlayers, "-- Select The Other Player --", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.OtherPlayerID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Start New Game" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Team List", "Index", "Home")
</div>